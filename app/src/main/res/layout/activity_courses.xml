<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".courses">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:textSize="20dp"
            android:text="Departments"
            android:textColor="#cc1b05"
            android:layout_gravity=""
            />

        <LinearLayout
            android:layout_width="415dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shadow3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:onClick="CS"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cs" />

                <TextView
                    android:id="@+id/Computer_Science"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Computer Sc"
                    android:textAlignment="center"
                    android:textSize="10dp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#fff" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:onClick="IBT"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ibt" />

                <TextView
                    android:id="@+id/ibt"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="IBT"
                    android:textAlignment="center"
                    android:textSize="10dp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#fff" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:onClick="EP"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/gc" />

                <TextView
                    android:id="@+id/entrepreneurship"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="entrepreneurship"
                    android:textAlignment="center"
                    android:textSize="10dp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:onClick="GC"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/lc" />

                <TextView
                    android:id="@+id/global_challenges"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="global challenges"
                    android:textAlignment="center"
                    android:textSize="10dp" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#ffff" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Computer Science"
            android:textColor="#132465"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Enrolled"
            android:textColor="#767676"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >


            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:background="#ffff"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/android" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Mobile development"
                    android:textAlignment="center"
                    android:textSize="16dp" />

                <View
                    android:layout_width="180dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#C81B05" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#ffff"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="100dp"
                    android:layout_gravity="center"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ai" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Artificial Intelligence"
                    android:textAlignment="center"
                    android:textSize="16dp" />

                <View
                    android:layout_width="180dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#34494e" />

            </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            >

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:background="#ffff"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="100dp"
                    android:layout_gravity="center"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/html" />

                <TextView
                    android:id="@+id/text3"

                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Network"
                    android:textAlignment="center"
                    android:textSize="16dp" />

                <View
                    android:layout_width="180dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#767676" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#ffff"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="100dp"
                    android:layout_gravity="center"

                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cloud" />

                <TextView
                    android:id="@+id/text4"

                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Cloud Computing"
                    android:textAlignment="center"
                    android:textSize="16dp" />

                <View
                    android:layout_width="180dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#000000" />

            </LinearLayout>

        </LinearLayout>
        <Button
            android:onClick="goto_classes"
            android:layout_marginTop="15dp"
            android:layout_width="373dp"
            android:layout_height="35dp"
            android:text="Go to classroom"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:background="#C81B05"
            />
    </LinearLayout>


    </LinearLayout>
</RelativeLayout>